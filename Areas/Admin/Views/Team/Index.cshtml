@model IEnumerable<Team>
@{
    int Count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Team Table</h4>
                    <p class="card-description"><a asp-controller="Team" asp-action="Create">Add person</a>
                    </p>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th> # </th>
                            <th> Image </th>
                            <th> Name </th>
                            <th> Position </th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                         @foreach (var item in Model)
                        {
                            Count++;
                            <tr>
                            <td>@Count</td>
                            <td class="py-1">
                              <img src="~/assets/img/@item.İmageUrl" alt="image">
                            </td>
                            <td> @item.PersonName</td>
                            <td> @item.Position </td>
                            <td> <a asp-controller="Team" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info" >Detail</a>
                                <a asp-controller="Team" asp-action="Update" asp-route-id="@item.Id" class="btn btn-info" >Update</a>
                                <a asp-controller="Team" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info" >Delete</a></td>
                          </tr>
                        }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>